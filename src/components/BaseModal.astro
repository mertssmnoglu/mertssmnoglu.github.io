---
export interface Props {
  id: string
  title?: string
}

const { id, title } = Astro.props
---

<div id={id} class="modal" style="display: none;">
	<div class="modal-content">
		<span class="close">&times;</span>
		{title && <h3>{title}</h3>}
		<slot />
	</div>
</div>

<style>
	.modal {
		position: fixed;
		z-index: 1000;
		left: 0;
		top: 0;
		width: 100%;
		height: 100%;
		background-color: rgba(0,0,0,0.4);
	}

	.modal-content {
		background-color: white;
		margin: 15% auto;
		padding: 20px;
		border-radius: 8px;
		width: 80%;
		max-width: 500px;
		position: relative;
	}

	.close {
		position: absolute;
		top: 10px;
		right: 15px;
		font-size: 28px;
		font-weight: bold;
		cursor: pointer;
	}

	.close:hover {
		color: var(--accent);
	}

	.modal-content h3 {
		margin-top: 0;
		color: rgb(var(--black));
	}

	.modal-content :global(p), 
	.modal-content :global(ul) {
		color: rgb(var(--gray-dark));
		text-align: left;
	}
</style>