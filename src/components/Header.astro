---
import { SITE_TITLE } from '../consts'
import HeaderLink from './HeaderLink.astro'
import SocialLinks from './SocialLinks.astro'
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
		<div class="right-section">
			<SocialLinks />
			<button
				id="theme-toggle"
				aria-label="Toggle dark/light mode"
				title="Toggle dark/light mode"
			>
				<!-- Moon icon: shown in light mode (click to go dark) -->
				<svg id="icon-moon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
					<path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/>
				</svg>
				<!-- Sun icon: shown in dark mode (click to go light) -->
				<svg id="icon-sun" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
					<circle cx="12" cy="12" r="5"/>
					<line x1="12" y1="1" x2="12" y2="3"/>
					<line x1="12" y1="21" x2="12" y2="23"/>
					<line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/>
					<line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/>
					<line x1="1" y1="12" x2="3" y2="12"/>
					<line x1="21" y1="12" x2="23" y2="12"/>
					<line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/>
					<line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/>
				</svg>
			</button>
		</div>
	</nav>
	<a
		rel="me"
		style="display: none;"
		href="https://mastodon.social/@mertssmnoglu">Mastodon</a
	>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: var(--header-bg);
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
		white-space: nowrap;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		flex-wrap: nowrap;
		gap: 0.5em;
	}
	.right-section {
		display: flex;
		align-items: center;
		gap: 0.25em;
		flex-shrink: 0;
	}
	.internal-links {
		display: flex;
		align-items: center;
		flex-wrap: nowrap;
		gap: 0.5em;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
		white-space: nowrap;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	@media (max-width: 480px) {
		nav {
			flex-direction: row;
			align-items: center;
			justify-content: flex-start;
			gap: 0.35em;
		}
		.internal-links {
			flex: 1 1 auto;
			min-width: 0;
			justify-content: flex-start;
			gap: 0.35em;
		}
		.internal-links a {
			padding: 0.75em 0.35em;
			font-size: 0.95em;
		}
		.internal-links a.active {
			border-left: 0;
		}
	}
	@media (max-width: 380px) {
		h2 {
			font-size: 0.9em;
		}
		nav a {
			padding: 0.65em 0.25em;
			font-size: 0.9em;
		}
	}
	#theme-toggle {
		display: flex;
		align-items: center;
		justify-content: center;
		background: none;
		border: none;
		cursor: pointer;
		padding: 0.4em;
		border-radius: 6px;
		color: rgb(var(--gray-dark));
		transition: color 0.2s, background-color 0.2s;
	}
	#theme-toggle:hover {
		background-color: rgba(var(--gray), 15%);
	}
	/* Show moon in light mode, sun in dark mode */
	#icon-sun {
		display: none;
	}
	#icon-moon {
		display: block;
	}
	:global(.dark) #icon-sun {
		display: block;
	}
	:global(.dark) #icon-moon {
		display: none;
	}
</style>

<script>
  const btn = document.getElementById('theme-toggle');
  btn?.addEventListener('click', () => {
    const isDark = document.documentElement.classList.toggle('dark');
    localStorage.setItem('theme', isDark ? 'dark' : 'light');
  });
</script>
