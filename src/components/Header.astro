---
import { SITE_TITLE } from '../consts'
import HeaderLink from './HeaderLink.astro'
import SocialLinks from './SocialLinks.astro'
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
		<SocialLinks />
	</nav>
	<a
		rel="me"
		style="display: none;"
		href="https://mastodon.social/@mertssmnoglu">Mastodon</a
	>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
		white-space: nowrap;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		flex-wrap: nowrap;
		gap: 0.5em;
	}
	.internal-links {
		display: flex;
		align-items: center;
		flex-wrap: nowrap;
		gap: 0.5em;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
		white-space: nowrap;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	@media (max-width: 480px) {
		nav {
			flex-direction: row;
			align-items: center;
			justify-content: flex-start;
			gap: 0.35em;
		}
		.internal-links {
			flex: 1 1 auto;
			min-width: 0;
			justify-content: flex-start;
			gap: 0.35em;
		}
		.internal-links a {
			padding: 0.75em 0.35em;
			font-size: 0.95em;
		}
		.internal-links a.active {
			border-left: 0;
		}
	}
	@media (max-width: 380px) {
		h2 {
			font-size: 0.9em;
		}
		nav a {
			padding: 0.65em 0.25em;
			font-size: 0.9em;
		}
	}
</style>
